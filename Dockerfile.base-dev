# syntax=docker/dockerfile:1.4
# Base image for local development
# Contains all tools needed for development: Elixir, Rust, Node, Flutter, Chrome
# Rebuild weekly or when major tool versions change
FROM elixir:1.18

# Install build dependencies and development tools
RUN apt-get update -qq && \
    apt-get install -y \
      build-essential \
      git \
      inotify-tools \
      curl \
      sqlite3 \
      libsqlite3-dev \
      libpq-dev \
      postgresql-client \
      ffmpeg \
      chromium \
      chromium-driver \
      ca-certificates \
      xz-utils \
      gosu && \
    curl -fsSL https://deb.nodesource.com/setup_22.x | bash - && \
    apt-get install -y nodejs && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install Rust
ENV RUSTUP_HOME=/opt/rustup
ENV CARGO_HOME=/opt/cargo
ENV PATH="${CARGO_HOME}/bin:${PATH}"
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --default-toolchain stable && \
    chmod -R a+w /opt/rustup /opt/cargo

# Install Flutter SDK
ENV FLUTTER_VERSION=3.38.5
ENV FLUTTER_HOME=/opt/flutter
ENV PATH="${FLUTTER_HOME}/bin:${PATH}"
RUN curl -L https://storage.googleapis.com/flutter_infra_release/releases/stable/linux/flutter_linux_${FLUTTER_VERSION}-stable.tar.xz \
    -o flutter.tar.xz && \
    tar xf flutter.tar.xz -C /opt && \
    rm flutter.tar.xz && \
    git config --global --add safe.directory /opt/flutter && \
    flutter config --no-analytics && \
    flutter precache --web --no-android --no-ios --no-linux --no-windows --no-macos --no-fuchsia && \
    flutter --version && \
    chmod -R a+w /opt/flutter

# Install Hex and Rebar
RUN mix local.hex --force && \
    mix local.rebar --force

# Pre-warm hex package index
RUN mix hex.info

WORKDIR /app
